<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Discover</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/searchResult.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type='text/javascript' src='/scripts/config.js'></script>
  </head>

  <body>
    <div class="page-container">
      <header><% include ./partials/_header %></header>
      <div class="container">
        <main>
          <div id="browseHistory">
            <a href="/browse" class="tab tab_active">Discover</a>
            <a href="/history" class="tab">History</a>
          </div>
          <div class="discover">
            <!-- For show only, delete later -->
          <% for (let i of data){ %>
            <a class="reset" href="/restaurants/<%=i.id%>/menu">
            <div class="searchResults">
              <div id="result">
                <div id="result_img">
                  <img class="thumb_resize" src="https://image.shutterstock.com/image-illustration/cute-cartoon-dim-sum-traditional-260nw-1063999892.jpg">
                </div>
                <div id="result-description">
                  <h2 class="reset"><%= i.name %></h2>
                  <p><%=i.address%></br>5 minutes away</p>
                  <p><%= i.category%></p>
                </div>
              </div>
            </div>
          </a>
            <% }%>
            </div>
        </main>
        <map>
          <div id="map"></div>
          <script async defer type='text/javascript' src='/scripts/map.js'></script>
        </map>
      </div>

    </div>
  </body>
</html>
