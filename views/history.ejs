<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Discover</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/searchResult.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <!-- <script type="text/javascript" src="/scripts/historyHandler.js"></script> -->
    <script type='text/javascript' src='/scripts/config.js'></script>

    <style>
      /* Always set the map height explicitly to define the size of the div
      * element that contains the map. */
      #map {
        height: 100%;
      }
      /* Optional: Makes the sample page fill the window. */
      </style>
  </head>

  <body>
    <div class=page-container>
      <header><% include ./partials/_header %></header>
      <div class="container">
        <main data-orders>
          <div id="browseHistory">
              <a href="/browse" class="tab">Discover</a>
              <a href="/history" class="tab tab_active">History</a>
          </div>
          <%  properties.forEach(function (prop) { %>
          <div class="searchResults">
            <div id="result">
              <div id="result_img">
                <img class="thumb_resize" src="https://image.shutterstock.com/image-illustration/cute-cartoon-dim-sum-traditional-260nw-1063999892.jpg">
              </div>
              <div id="result_description">
                <h2><%= orderObject[prop][0].restaurant_name %></h2>
                <p><%= orderObject[prop][0].address %></p>
                <p><%= orderObject[prop][0].category %></br>
                  <% for (let i = 0; i < orderObject[prop].length; i++){ %>
                  <%= orderObject[prop][i].quantity %> x <%= orderObject[prop][i].item_name%></p>
                  <% } %>
                <p><%= orderObject[prop][0].time_entered %></p>
              </div>
            </div>
          </div>
          <% }) %>
        </main>
        <map>
          <div id="map"></div>
          <script async defer type='text/javascript' src='/scripts/map.js'></script>
        </map>
      </div>
    </div>
  </body>
</html>
