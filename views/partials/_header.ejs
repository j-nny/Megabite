  <div id="navbar" class="fixed-top">
    <div>
      <a class="navbar-brand" href="/">Bon Appetit</a>
    </div>
    <div class="navbar-nav ml-auto">
      <% if (true) { %>
        <input type="text" id="categorySearch" class="search" name="category" size="30" placeholder="Category">
